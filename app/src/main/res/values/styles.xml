<resources>

    <!-- Modifications to app theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <!-- Toolbar styles. -->
    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">60dp</item>
        <item name="android:background">@color/defaultBackgroundColor</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
        <item name="android:titleTextColor">@color/colorPrimaryDark</item>
        <item name="android:elevation">0dp</item>

    </style>
    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
        <item name="maxButtonHeight">70dp</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/defaultBackgroundColor</item>
        <item name="itemBackground">@drawable/defaultBackgroundColor</item>
        <item name="itemIconTint">@color/navigation_bar_txt_color</item>
        <item name="itemTextColor">@color/navigation_bar_txt_color</item>
        <item name="paddingStart">@dimen/bottom_navigation_padding</item>
        <item name="paddingEnd">@dimen/bottom_navigation_padding</item>
    </style>
</resources>
