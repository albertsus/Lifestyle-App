<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackgroundColor"
    tools:context=".StatsFrag">

    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".StatsFrag">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Title-->
            <TextView
                android:id="@+id/stats_frag_title"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                tools:text="Stats"
                android:textSize="48sp"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                />

            <ImageView
                android:id="@+id/period"
                android:layout_height="32dp"
                android:paddingBottom="16dp"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toEndOf="@id/stats_frag_title"
                app:layout_constraintBottom_toBottomOf="@id/stats_frag_title"
                android:src="@drawable/ic_period" />

            <!--Weight-->
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:gravity="left|center_vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:text="Weight"
                android:textColor="@color/textLabelDefault"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/stats_frag_title"
                app:layout_constraintTop_toBottomOf="@id/stats_frag_title"
                tools:text="Weight" />

            <TextView
                android:id="@+id/tv_weight_data"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="33"
                tools:text="33"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                app:layout_constraintStart_toEndOf="@id/tv_weight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_weight"
                />

            <!--BMI -->
            <TextView
                android:id="@+id/tv_bmi"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:gravity="left|center_vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:text="BMI"
                android:textColor="@color/textLabelDefault"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/stats_frag_title"
                app:layout_constraintTop_toBottomOf="@id/tv_weight"
                tools:text="BMI" />

            <TextView
                android:id="@+id/tv_bmi_data"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="33"
                tools:text="33"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                app:layout_constraintStart_toEndOf="@id/tv_bmi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_bmi"
                />

            <!--BMR -->
            <TextView
                android:id="@+id/tv_bmr"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:gravity="left|center_vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:text="BMR"
                android:textColor="@color/textLabelDefault"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/stats_frag_title"
                app:layout_constraintTop_toBottomOf="@id/tv_bmi"
                tools:text="BMR" />

            <TextView
                android:id="@+id/tv_bmr_data"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="33"
                tools:text="33"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                app:layout_constraintStart_toEndOf="@id/tv_bmr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_bmr"
                />

            <!--Hikes -->
            <TextView
                android:id="@+id/tv_hikes"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:gravity="left|center_vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:text="Hikes"
                android:textColor="@color/textLabelDefault"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/stats_frag_title"
                app:layout_constraintTop_toBottomOf="@id/tv_bmr"
                tools:text="Hikes" />

            <TextView
                android:id="@+id/tv_hikes_data"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="33"
                tools:text="33"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                app:layout_constraintStart_toEndOf="@id/tv_hikes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_hikes"
                />

            <!--Calories -->
            <TextView
                android:id="@+id/tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:gravity="left|center_vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:text="Calories"
                android:textColor="@color/textLabelDefault"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/stats_frag_title"
                app:layout_constraintTop_toBottomOf="@id/tv_hikes"
                tools:text="Calories" />

            <TextView
                android:id="@+id/tv_calories_data"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="33"
                tools:text="33"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                app:layout_constraintStart_toEndOf="@id/tv_calories"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_calories"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>